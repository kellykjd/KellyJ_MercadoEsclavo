<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".view.LoginActivity">


    <ImageView
        android:id="@+id/loginActivity_imageView_logo"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:src="@drawable/logo">
    </ImageView>

    <EditText
        android:id="@+id/loginActivity_editText_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/loginActivity_editText_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <Button
        android:id="@+id/loginActivity_button_ingresar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorToolbar"
        android:textColor="@color/colorBlanco"
        android:layout_marginTop="10dp"
        android:text="Ingresar"
        android:background="@drawable/rounded">
    </Button>

    <Button
        android:id="@+id/loginActivity_button_registrarse"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorToolbar"
        android:textColor="@color/colorBlanco"
        android:layout_marginTop="10dp"
        android:text="Registrarse"
        android:background="@drawable/rounded">
    </Button>

</LinearLayout>