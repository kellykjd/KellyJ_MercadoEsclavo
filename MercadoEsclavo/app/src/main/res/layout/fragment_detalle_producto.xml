<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical"
    tools:context=".view.FragmentDetalleProducto">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <ImageView
            android:id="@+id/fragmentDetalleProducto_ImageView_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/fragmentDetalleProducto_TextView_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Nombre producto"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/fragmentDetalleProducto_TextView_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Precio producto"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/fragmentDetalleProducto_TextView_descripición"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20sp"
        tools:text="Descripción producto" />

</LinearLayout>